
<%= simple_form_for([@homie, @quote]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :quote %>
    <%= f.association :quote_type, :label_method => :description %>
    <%= f.input :insanity, as: :integer %>
    <%= f.input :star, as: :boolean %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
