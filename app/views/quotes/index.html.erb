<p style="color: green"><%= notice %></p>

<h1><%= @homie.name %>'s Quotes</h1>

<p>Life wouldn't be the same without this one</p>

<div id="quotes">
  <% @quotes.each do |quote| %>
    <div class="card">
      <%= render quote %>
      <p>
        <%= link_to "Show this quote", [@homie, quote] %>
        <%= link_to (quote.star ? "Unstar": "Star"), homie_quote_path(@homie, quote), "data-star-quote" => quote.star?, "data-turbo" => false %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to "New quote", new_homie_quote_path %>
