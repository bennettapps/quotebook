<h1>Search</h1>

<%= form_with url: "/search", method: :get do |form| %>
    <div class="mt-3">
        <%= form.label :query, "Search for:", :class => "form-label" %>
        <%= form.text_field :query, :value => @query, :class => "form-control" %>
    </div>

    <div class="mt-3">
        <%= form.label :insanity, "Insanity is at least:", :class => "form-label" %>
        <%= form.text_field :insanity, :value => @insanity, :class => "form-control", :type => "number" %>
    </div>

    <div class="mt-3">
        <%= form.submit "Search", :class => "btn btn-outline-primary" %>
    </div>
<% end %>

<p class="mt-3">You searched for '<%= @query %>'</p>

<h2>Results</h2>

<% if @quotes.present? %>
    <p>Hits: <%= @quotes.count %>

    <ul>
        <% @quotes.each do |q| %>
            <li><%= link_to q.quote + " (" + q.homie.name + ", insanity " + q.insanity.to_s + ")", homie_quote_path(q.homie, q) %></li>
        <% end %>
    </ul>
<% end %>
